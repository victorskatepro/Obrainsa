<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.victorsaico.obrainsa.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel fotográfico del equipo"
            android:layout_gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/logo_obrainsa"
                    android:layout_width="200dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLength="80"
                        android:id="@+id/edtCode"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Código"
                        />
                    <EditText
                        android:maxLength="80"
                        android:id="@+id/edtVersion"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Versión"
                        />
                    <EditText
                        android:maxLength="80"
                        android:id="@+id/edtVigencia"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="vigencia"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/main_texsize_30sp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Proyecto:"/>
                <EditText
                    android:maxLength="100"
                    android:id="@+id/edtProyecto"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint=""/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/main_texsize_30sp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Motivo:"/>
                <EditText
                    android:maxLength="00"
                    android:id="@+id/edtMotivo"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint=""/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/main_texsize_30sp"
                    android:text="Código EAM:"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:maxLength="100"
                    android:id="@+id/edtCodeEam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/main_texsize_30sp"
                android:text="Descripción:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="200"
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/main_texsize_30sp"
                android:text="Modelo:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="200"
                android:id="@+id/edtModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/main_texsize_30sp"
                android:text="Marca:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="150"
                android:id="@+id/edtMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/main_texsize_30sp"
                android:text="N°serie:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="200"
                android:id="@+id/edtSerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/main_texsize_30sp"
                android:text="Horómetro:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="100"
                android:id="@+id/edtHorometro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/main_texsize_30sp"
                android:text="Fecha de salida:"
                android:layout_width="112dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="50"
                android:id="@+id/edtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo1"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo2"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo3"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo4"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout

                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo5"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout

                android:layout_marginStart="5dp"
                android:onClick="selecPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo6"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo7"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo8"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
            <RelativeLayout

                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photo9"
                    android:background="#dfdcdc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout

            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/photo10"
                android:background="#dfdcdc"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_input_add"/>
        </RelativeLayout>
        <Button
            android:onClick="sendInform"
            android:layout_marginTop="5dp"
            android:id="@+id/sendReport"
            android:layout_gravity="center_horizontal"
            android:text="Enviar Reporte"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
